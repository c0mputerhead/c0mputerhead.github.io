---
import { Icon } from 'astro-icon/components';

const { icon, size } = Astro.props;
---
<div class={`flex flex-col flex-wrap bg-white/20 backdrop-blur rounded-lg p-2 [&>*]:text-wrap w-3xs gap-2 items-center text-center`}>
    <Icon name={`line-md:${icon}`} width={size} height={size} />
    <slot />
</div>